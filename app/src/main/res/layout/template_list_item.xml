<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_name"
        android:gravity="left|center_vertical"
        android:layout_alignParentTop="true"
        android:text="hi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:id="@+id/category_weight"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/category_name"
        android:layout_alignBottom="@id/category_name"
        android:text="hi"
        />

    <TextView
        android:id="@+id/category_drops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_name"
        android:layout_alignLeft="@id/category_name"
        android:paddingStart="20dp"
        android:text="hi"
        android:paddingEnd="0dp" />

    <TextView
        android:id="@+id/category_assigments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_drops"
        android:layout_alignLeft="@id/category_name"
        android:paddingStart="20dp"
        android:text="hi"
        android:paddingEnd="0dp"/>
</RelativeLayout>
